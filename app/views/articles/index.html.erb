<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Original Avatar</th>
      <th>Thumbnail Avatar</th>
      <th>Resume Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= image_tag article.avatar.url %></td>
        <td><%= image_tag article.avatar.url(:thumb) %></td>
        <td><%= article.resume_file_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
